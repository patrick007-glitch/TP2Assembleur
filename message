;
;Affiche le message des resultats selon le bon gabarie.
;
resultat:LDX 0,i
         LDX occu1,d
         CPX 0,d
         BREQ message5 ; aucune lettre dans la chaine de charactere 
         LDX 0,i
         LDX occu2,d
         CPX 0,d

message5: STRO messrien,d 
          BR question       

;
;
;
pourcent:STRO mespour1,d
         DECO taux,d 
         STRO mespour2,d
         BR question


avec:.ASCII "\n\nAvec\x00"
occurenc: .ASCII "occurences,\x00"
messvoy: .ASCII "la voyelle \"\x00"
messvoyS: .ASCII "les voyelles \"\x00"
messcons:.ASCII "la consonne \"\x00" 
mesutil: .ASCII "est la plus utilisee\x00"
mesutilS: .ASCII "sont les plus utilisees\x00"
parcontr: .ASCII "\n, par contre, \x00" 
messrien: .ASCII "\nAucune occurence de consonne ou de voyelle\x00"
mespour1: .ASCII "\n\nLes voyelles representent \x00"
mespour2: .ASCII " % des lettres entrees.\x00"

 
occus:.ASCII "occurences\x00" 
